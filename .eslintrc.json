{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "plugins": ["wdio", "mocha"],
  "extends": ["airbnb-base", "prettier", "plugin:wdio/recommended", "plugin:mocha/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "wdio/no-pause": "off",
    "mocha/no-mocha-arrows": "off",
    "class-methods-use-this": "off",
    "no-console": "off",
    "prefer-arrow-callback": "off",
    "func-names": "off",
    "no-shadow": "off",
    "no-param-reassign": "off",
    "prefer-template": "off",
    "no-unused-vars": "off",
    "spaced-comment": "off",
    "import/extensions": "off",
    "import/no-unresolved": "off",
    "no-unused-expressions": "off",
    "no-sequences": "off",
    "import/no-extraneous-dependencies": "off",
    "object-shorthand": "off",
    "import/newline-after-import": "off",
    "arrow-body-style": "off",
    "mocha/no-skipped-tests": "off"
  },
  "ignorePatterns": ["/module-9/service/*", "**/coverage", "**/mochawesome-report", "**/artifacts", "**/report"]
}
